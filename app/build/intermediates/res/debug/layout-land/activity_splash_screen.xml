<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/splash_background"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scaleType="fitXY"
        android:src="@drawable/splash_background" />

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <ImageView
            android:id="@+id/splash_marvin"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:background="@null"
            android:scaleType="fitStart"
            android:src="@drawable/splash_marvin" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/splash_title"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center|center_horizontal|center_vertical"
                    android:layout_weight="1"
                    android:paddingRight="10dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/splash_title" />

                <Space
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="5" />
            </LinearLayout>

            <ImageView
                android:id="@+id/splash_null"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="9"
                android:src="@drawable/empty" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="bottom"
                android:layout_weight="2.5"
                android:id="@+id/splash_linear"
                android:layout_marginBottom="2dp">

                <ImageView
                    android:id="@+id/splash_null2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/empty" />

                <ImageView
                    android:id="@+id/splash_unb50"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="6dp"
                    android:layout_weight="1"
                    android:src="@drawable/splash_unb50" />

                <ImageView
                    android:id="@+id/splash_struct"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="8dp"
                    android:layout_weight=".5"
                    android:src="@drawable/splash_struct" />

            </LinearLayout>

        </LinearLayout>

    </FrameLayout>

</FrameLayout><!-- From: file:/E:/Users/fraps/AndroidstudioProjects/GMUnB/app/src/main/res/layout-land/activity_splash_screen.xml -->