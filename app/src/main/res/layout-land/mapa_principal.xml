<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mapa_principal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"  >


    <br.unb.struct.gmunb.TouchImageView
        android:id="@+id/img_mapa_principal"
        android:src="@drawable/planta_geral_unb"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


    <Button
        android:id="@+id/indice"
        style="@style/MyTheme"
        android:layout_width="140dp"
        android:layout_height="40dp"
        android:background="@drawable/botao_titulo"
        android:text="@string/nome_botao" />

</RelativeLayout>